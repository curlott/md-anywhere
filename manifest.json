{
  "name": "md everywhere",
  "description": "We can write 'Markdown' texts everywhere.",
  "version": "0.2.0",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "file_handlers": {
      "text": {
          "types": ["*"],
          "title": "md everywhere"
      }
  },
  "permissions": [
    {"fileSystem": ["write"]},
    "storage"
  ],
  "icons": { "16": "16.png", "128": "128.png" }
}
